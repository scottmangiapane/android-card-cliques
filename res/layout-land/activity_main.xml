<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginRight="@dimen/activity_margin"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:src="@drawable/icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/button_scores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_marginRight="@dimen/activity_margin"
            android:adjustViewBounds="true"
            android:src="@drawable/button_scores" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/border_score_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_margin"
                android:layout_marginRight="@dimen/activity_margin"
                android:layout_marginTop="@dimen/activity_margin_half"
                android:adjustViewBounds="true"
                android:src="@drawable/border" />

            <TextView
                android:id="@+id/score_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/border_score_1"
                android:layout_alignEnd="@+id/border_score_1"
                android:layout_alignLeft="@+id/border_score_1"
                android:layout_alignRight="@+id/border_score_1"
                android:layout_alignStart="@+id/border_score_1"
                android:layout_alignTop="@+id/border_score_1"
                android:gravity="center"
                android:text="--"
                android:textSize="@dimen/activity_text_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/border_score_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_margin"
                android:layout_marginRight="@dimen/activity_margin"
                android:layout_marginTop="@dimen/activity_margin_half"
                android:adjustViewBounds="true"
                android:src="@drawable/border" />

            <TextView
                android:id="@+id/score_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/border_score_2"
                android:layout_alignEnd="@+id/border_score_2"
                android:layout_alignLeft="@+id/border_score_2"
                android:layout_alignRight="@+id/border_score_2"
                android:layout_alignStart="@+id/border_score_2"
                android:layout_alignTop="@+id/border_score_2"
                android:gravity="center"
                android:text="--"
                android:textSize="@dimen/activity_text_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/border_score_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_margin"
                android:layout_marginRight="@dimen/activity_margin"
                android:layout_marginTop="@dimen/activity_margin_half"
                android:adjustViewBounds="true"
                android:src="@drawable/border" />

            <TextView
                android:id="@+id/score_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/border_score_3"
                android:layout_alignEnd="@+id/border_score_3"
                android:layout_alignLeft="@+id/border_score_3"
                android:layout_alignRight="@+id/border_score_3"
                android:layout_alignStart="@+id/border_score_3"
                android:layout_alignTop="@+id/border_score_3"
                android:gravity="center"
                android:text="--"
                android:textSize="@dimen/activity_text_size" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/button_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_marginRight="@dimen/activity_margin"
            android:layout_marginTop="@dimen/activity_margin"
            android:adjustViewBounds="true"
            android:src="@drawable/button_help" />

        <ImageView
            android:id="@+id/button_play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_marginRight="@dimen/activity_margin"
            android:layout_marginTop="@dimen/activity_margin_half"
            android:adjustViewBounds="true"
            android:src="@drawable/button_play" />
    </LinearLayout>
</LinearLayout>
