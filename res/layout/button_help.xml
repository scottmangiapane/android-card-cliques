<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelpButton">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/activity_dimen_screen_border">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_dimen_large"
            android:text="INSTRUCTIONS"
            android:textColor="@color/white"
            android:textSize="@dimen/activity_text"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_dimen_small"
            android:text="The goal of this game is to find as many cliques as you can before the timer runs out. A clique is a group of three cards where each trait (color, fill, number, and shape) is entirely different or entirely the same for each card."
            android:textSize="@dimen/activity_text" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_dimen_large">

            <TextView
                android:id="@+id/text_example"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="EXAMPLE"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_text"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/button_refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/text_example"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_refresh_white_24dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_dimen_small"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_dimen_extra_small"
                android:layout_marginLeft="@dimen/activity_dimen_extra_small"
                android:layout_marginRight="@dimen/activity_dimen_extra_small"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/card_empty" />

            <ImageView
                android:id="@+id/imageView_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_dimen_extra_small"
                android:layout_marginLeft="@dimen/activity_dimen_extra_small"
                android:layout_marginRight="@dimen/activity_dimen_extra_small"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/card_empty" />

            <ImageView
                android:id="@+id/imageView_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_dimen_extra_small"
                android:layout_marginLeft="@dimen/activity_dimen_extra_small"
                android:layout_marginRight="@dimen/activity_dimen_extra_small"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/card_empty" />
        </LinearLayout>

        <TextView
            android:id="@+id/button_return_to_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_dimen_large"
            android:background="@color/red"
            android:padding="@dimen/activity_dimen"
            android:text="RETURN TO MENU"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/activity_text"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
